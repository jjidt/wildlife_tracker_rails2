<h1>Edit Species</h1>

<% if @species.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @species.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<form method="post" action="/species/<%= @species.id %>">
  <input type="hidden" name="_method" value="patch">
  <label for="species_name">Name:</label>
  <input id="species_name" name="species[name]" type="text" value="<%= @species.name %>">
  <button class="btn btn-success">Update Species</button>
</form>

<hr />

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form method="post" action="/species/<%= @species.id %>/sighting">
  <input type="hidden" name="_method" value="patch">
  <label for="date">Start date:</label>
  <input id="date" name="sighting[date]" type="date">
  <label for="latitude">Latitude:</label>
  <input id="latitude" name="sighting[latitude]" type="number" min="0" max="180">
  <label for="longitude">Longitude:</label>
  <input id="longitude" name="sighting[longitude]" type="number" min="0" max="180">
  <label for="region">Region:</label>
  <select id="region" name="sighting[region]">
    <option>Manhattan, OR</option>
    <option>Tokyo, OR</option>
    <option>Beirut, OR</option>
  </select>
  <button class="btn btn-info">Add Sighting</button>
</form>
<p><a href="/">Return to Homepage</a></p>
